<div class="page-header">
  <%= link_to meal_ingredient_path(@meal_ingredient), class: 'btn btn-default' do %>
    All Meal_ingredients
  <% end %>
  <%= link_to edit_meal_ingredient_path(@meal_ingredient), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show meal_ingredient</h1>
</div>

<dl class="dl-horizontal">
  <dt>Meal:</dt>
  <dd><%= @meal_ingredient.meal.name %></dd>

  <dt>Meal plan:</dt>
  <dd><%= @meal_ingredient.meal.day.meal_plan.id %></dd>

  <dt>Ingredient:</dt>
  <dd><%= @meal_ingredient.ingredient.name %></dd>

  <dt>Quantity:</dt>
  <dd><%= @meal_ingredient.quantity %></dd>

  <dt>Unit:</dt>
  <dd><%= @meal_ingredient.unit %></dd>

</dl>
