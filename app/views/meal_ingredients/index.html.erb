


<div class="row">
  <div class="col-sm-6">
    <h1>Meal_ingredients</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_meal_ingredient_path, class: 'btn btn-primary' do %>
    Add New Meal ingredient
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Meal</th>
            <th>Ingredient</th>
            <th>Quantity</th>
            <th>Unit</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @meal_ingredients.each do |meal_ingredient| %>
        <%= content_tag :tr, id: dom_id(meal_ingredient), class: dom_class(meal_ingredient) do %>
          

                      <td><%= meal_ingredient.meal %></td>
                      <td><%= meal_ingredient.ingredient %></td>
                      <td><%= meal_ingredient.quantity %></td>
                      <td><%= meal_ingredient.unit %></td>
          
          
            <td><%= link_to 'Show', meal_ingredient %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
