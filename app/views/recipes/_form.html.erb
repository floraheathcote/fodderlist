<%= form_with(model: recipe, local: true) do |form| %>
  
  <%= render 'shared/errors', object: recipe %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :meal_type %>
    <%= form.text_field :meal_type, class: 'form-control' %>
  </div>

<div class="field">
    <%= form.label :method %>
    <%= form.rich_text_area :method, class: 'form-control', style:"height: unset !important"%>
  </div>

  <div class="form-group">
    <%= form.label :portions %>
    <%= form.text_field :portions, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :link %>
    <%= form.text_area :notes, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :main_image, direct_upload: true, multiple: false %>
  </div>

  <div class="form-group">
    <% if recipe.persisted? %>
      <div class="float-right">
        <%= link_to 'Delete recipe', recipe, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if recipe.persisted? %>
      <%= link_to "Cancel", recipe, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", recipes_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>

<br>