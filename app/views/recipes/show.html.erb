<div class="page-header">
    <%= link_to "<< All Recipes", recipes_path, class: 'btn btn-default' %>
</div>

<div class="row">
    <div class="col-sm-7">
        <%= render 'method_card', recipe: @recipe, edit:"yes", portions: nil %>
        <br>

        

    </div>
      <br>
    <div class="col-sm-5">
        <%= render 'recipe_image_card', recipe: @recipe %>
        <br>
        <%= render 'ingredients_card', recipe_ingredient_groups: @recipe_ingredient_groups %>
      
    <% if current_user.present? %>		
      <% if @recipe.user == current_user || current_user.admin? %>
        <%= render 'recipe_ingredient_groups_card', recipe_ingredient_group: @new_recipe_ingredient_group, recipe: @recipe %>
      <% end %>
    <% end %>
  </div> 
    <br>
</div>

