
<h1>Shopping list</h1>

<%= link_to "View meal plan", meal_plan_path(@meal_plan), class: 'btn btn-primary' %>

<br><br><br>

<button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
Hide Button
</button>



<h3>To buy:</h3>
<%= render 'shopping_list_display', shopping_list_items: @shopping_list_items_unticked %>
<%#= render 'shopping_list_display', shopping_list_items: @shopping_list_items %>
<br><br>

<div data-controller="toggle" data-toggle-visible-value="true" data-toggle-hide-text="Hide ticked off items" data-toggle-show-text="Show ticked off items">
    <button type="button" class="btn btn-primary" 
        data-action="click->toggle#showhide"
        data-toggle-target="buttonText">
    </button>
    <div data-toggle-target="content">
        <h3>Ticked off:</h3>
        <%= render 'shopping_list_display', shopping_list_items: @shopping_list_items_ticked %>
    </div>
</div>

