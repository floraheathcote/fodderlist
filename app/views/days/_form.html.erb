<%= form_with(model: day, local: true) do |form| %>
  <% if day.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(day.errors.count, "error") %> prohibited this day from being saved:</h2>

      <ul>
      <% day.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_select :date, :selected => @date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if day.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', day, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if day.persisted? %>
      <%= link_to "Cancel", @meal_plan, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", @meal_plan, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
