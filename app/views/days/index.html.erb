
<h1>What's on the menu today?</h1>

  <% @days.each do |day| %>
      <% day.meals.each do |meal| %>
      <% if meal.meal_recipes.present? %>
        <h2><%= meal.name %></h2><br>
      <% end %>
            <% meal.meal_recipes.each do |mr| %> 

                <div class="row">
                    <div class="col-sm-6">
                      <%= render 'recipes/method_card', recipe: mr.recipe, edit: "no" %>
                      <br>
                </div>

                <div class="col-sm-6">
                <%= render 'meal_recipes/meal_recipe_ingredients', mr: mr %>
                </div>
            <% end %>
      <% end %>
  <% end %>
          
            
          
