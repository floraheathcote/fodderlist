<%= form_with(model: ingredient_category, local: true) do |form| %>

    <%= render 'shared/errors', object: ingredient_category %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control', autofocus: true %>
  </div>

  <div class="form-group">
    <% if ingredient_category.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', ingredient_category, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if ingredient_category.persisted? %>
      <%= link_to "Cancel", ingredient_category, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", ingredient_categories_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
