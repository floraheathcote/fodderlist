
<h1>Meal Plans</h1>

<%#= link_to "Create new meal plan", new_meal_plan_path, class: 'btn btn-primary' ---- need to add date=0 case in order to keep this%>

<br><br>
   

<% prev_mp = nil %>
<%= month_calendar events: @days do |date, days| %>
  <%= date.day %>

  <%= link_to "view day", filtered_days_path(:this_date, date: date) %>

  <% unless Day.user(current_user).this_date(date).present? %>
      <%= link_to icon('fas', 'plus-circle'), new_meal_plan_path(start_date: date) %>
  <% end %>

  <% days.each do |day| %>
      <%= render 'calendar_meal_plan_banner', day: day %>
      <%= render 'calendar_meals_in_day', day: day %>
  <% end %>

<% end %>


