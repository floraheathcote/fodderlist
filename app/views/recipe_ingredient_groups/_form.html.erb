<%= form_with(scope: scope, url: url, local: true, method: method) do |form| %> 

<%= render 'shared/errors', object: @recipe_ingredient_group %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%# if recipe_ingredient_group.persisted? %>
      <div class="float-right">
        <%#= link_to 'Destroy', recipe_ingredient_group_path(@recipe_ingredient_group), method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <%# end %>

    <%= form.submit class: 'btn btn-primary' %>

    <%# if recipe_ingredient_group.persisted? %>
      <%#= link_to "Cancel", @recipe, class: "btn btn-link" %>
    <%# else %>
      <%#= link_to "Cancel", @recipe, class: "btn btn-link" %>
    <%# end %>
  </div>
<% end %>
