<%= turbo_frame_tag "meal#{meal.id}available_leftover#{leftover.id}" do %>
    <% if leftover.calculated_stock_level > 0 %>
        <%# if title_already_drawn == false %>
            
            <%# title_already_drawn = true %>
        <%# end %>
        
            <div class="row">
                <div class="col">
                    <%= render "leftovers/leftover", leftover: leftover %>                                    
                </div>

                <div class="col"> 
                    <%= render 'meal_with_leftovers/simple_form', leftover: leftover, meal: meal, meal_with_leftover: MealWithLeftover.new  %>
                </div>
            </div>
       
    <% end %>
<% end %>
