


<div class="row">
  <div class="col-sm-6">
    <h1>Meals</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_meal_path, class: 'btn btn-primary' do %>
    Add New Meal
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Meal plan</th>
            <th>Recipe</th>
            <th>Favorite</th>
            <th>Notes</th>
            <th>Meal date</th>
            <th>Meal type</th>
            <th>Portions</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @meals.each do |meal| %>
        <%= content_tag :tr, id: dom_id(meal), class: dom_class(meal) do %>
          

                      <td><%= meal.meal_plan %></td>
                      <td><%= meal.recipe %></td>
                      <td><%= meal.favorite %></td>
                      <td><%= meal.notes %></td>
                      <td><%= meal.meal_date %></td>
                      <td><%= meal.meal_type %></td>
                      <td><%= meal.portions %></td>
          
          
            <td><%= link_to 'Show', meal %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
