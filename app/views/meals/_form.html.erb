<%#= turbo_frame_tag "add_meal_form" do %>

  <%#= form_with(model: @meal ) do |form| %>
  <%= form_with(scope: @meal, url: url, method: method) do |form| %>
    

    <div class="form-group">
      <%= form.text_field :name, class: 'form-control', placeholder: "Meal name - e.g. Nana's chicken with side salads" %>
    </div>

    <div class="form-group">
      <%= form.label :meal_time %>
      <%= form.time_field :time, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.text_area :notes, class: 'form-control', placeholder: "Add notes... e.g. Maria coming for lunch, must be gluten free" %>
    </div>

    <div class="form-group">
    <%= form.select :meal_type, Meal::MEALTYPES, 
        {:prompt => 'Meal type'}, 
        {:class=>'input',
        :style=>'width:100%', 
        :onchange=>"$('#accordion').accordion('activate',2);$('#blind').show('blind', 500)"}%>
  </div>


      <%= form.hidden_field :day_id, value: day.id %>
  

      <%= form.submit button_text, class: 'btn btn-primary' %>
      <%#= form.submit class: 'btn btn-primary' %>

  
  <% end %>

<%# end %>