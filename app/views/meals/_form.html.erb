

<%= form_with(scope: meal, url: url, local: true, method: method) do |form| %>
  

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%#= form.label :favorite %>
    <%#= form.check_box :favorite, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :notes %>
    <%= form.text_area :notes, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :meal_type %>
    <%= form.select :meal_type, Meal::MEALTYPES, prompt: "Pick one" %>
  </div>

      <%= form.hidden_field :day_id, value: day.id %>
 

    <%= form.submit class: 'btn btn-primary' %>

 
<% end %>
