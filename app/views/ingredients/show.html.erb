<div class="page-header">
  <%= link_to "All ingredients", ingredients_path, class: 'btn btn-default' %>

  <% unless current_user.admin? || Recipe.not_user(current_user).ingredient(@ingredient).present? %>
    <%= link_to "Edit", edit_ingredient_path(@ingredient), class: 'btn btn-primary'  %>
  <% end %>
  
  <h1>Show ingredient</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @ingredient.name %></dd>

  <dt>Ingredient category:</dt>
  <dd><%= @ingredient.ingredient_category.name %></dd>

  <%#= main_image(@ingredient) %>

</dl>
